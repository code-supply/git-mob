#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

coauthors_file=$1
mob_list_file=$2

[[ -e "$mob_list_file" ]] \
  && mob_list="$(cat "$mob_list_file")"

[[ -z "$mob_list" ]] \
  && mob_list=[]

jq \
  --raw-output \
  --argjson mob "$mob_list" \
  "$(cat <<'EOF'
  .coauthors
| to_entries
| map(select([.key] | inside($mob)))
| from_entries
| map("Co-authored-by: \(.name) <\(.email)>")[]
EOF
)" \
  < "$coauthors_file"
